<%# 
  {
    "type": "page"
  }
%><%- include(partials + 'header.ejs', {config}) -%>
<div class="home-content">
  <h1>Bike Mesa</h1>

  <%- include(partials + 'social.ejs', {config}) -%>
  
  <img class="ride-banner" src="/img/group_ride2.jpg" alt="bike mesa ride">

  <div class="max-w-2xl mx-auto text-lg text-gray-600">
    We are creating a bike community in Downtown Mesa while boosting local businesses! DJ bike party every third Friday meet 7pm @ Oro Brewery. 🚲🍻
  </div>
  
  <div class="w-full max-w-2xl bg-white rounded-lg shadow-lg p-6 mt-8">
    <h2 class="text-2xl font-semibold mb-4 text-gray-800">Latest Blog:</h2>
    <article class="border-l-4 border-blue-500 pl-4">
      <h3 class="text-xl font-medium mb-2">
        <a href="<%= blogs[0].config.link %>" class="text-blue-600 hover:text-blue-800 no-underline"><%= blogs[0].config.title%></a>
      </h3>
      <time class="text-sm text-gray-500 mb-2 block"><%= blogs[0].config.date %></time>
      <p class="text-gray-600"><%= blogs[0].config.description || `${blogs[0].config.title}...` %></p>
    </article>
  </div>
  
  <a rel="me" href="https://fosstodon.org/@monteslu" style="display: none;">Mastodon</a>
</div>

<%- include(partials + 'footer.ejs', {config}) -%>