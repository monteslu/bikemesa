<%# 
  {
    "type": "page"
  }
%><%- include(partials + 'header.ejs', {config}) -%>
<div class="container mx-auto lg:h-screen flex flex-col justify-center items-center">
  <h1>Bike Mesa</h1>

  <%- include(partials + 'social.ejs', {config}) -%>
  <img class="ride-banner" src="/img/bikemesaride.webp" alt="bike mesa ride">

  <div style="margin: 15px; max-width: 800px;">
    We're working to make bicycling a prominent, safe, and convenient form of transportation and recreation in Mesa, Arizona and surrounding areas through education, grassroots events, and civic participation.
  </div>
  <div>
    <h2>latest blog:</h2>
    <header>
      <h3 class="title"><a href="<%= blogs[0].config.link %>"><%= blogs[0].config.title%></a></h3>
      <span><%= blogs[0].config.date %></span>
    </header>
    <section>
      <p class="description"><%= blogs[0].config.description || `${blogs[0].config.title}...` %></p>
    </section>
  </div>
  <a rel="me" href="https://fosstodon.org/@monteslu" style="display: none;">Mastodon</a>
</div>

<%- include(partials + 'footer.ejs', {config}) -%>