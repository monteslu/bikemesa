<!doctype html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="Description" content="<%= pageConfig.description || 'Bike Mesa Action Group' %>">
  <title><%= pageConfig.title || 'BikeMesa' %></title>
  
  <!-- Open Graph / Social Media Meta Tags -->
  <meta property="og:title" content="<%= pageConfig.title || 'BikeMesa' %>">
  <meta property="og:description" content="<%= pageConfig.description || 'Bike Mesa Action Group' %>">
  <meta property="og:image" content="<%= pageConfig.ogImage ? 'https://bikemesa.org' + pageConfig.ogImage : 'https://bikemesa.org/img/full_logo.png' %>">
  <meta property="og:url" content="<%= pageConfig.link ? 'https://bikemesa.org' + pageConfig.link : 'https://bikemesa.org' %>">
  <meta property="og:type" content="<%= pageConfig.type === 'blog' ? 'article' : 'website' %>">
  
  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= pageConfig.title || 'BikeMesa' %>">
  <meta name="twitter:description" content="<%= pageConfig.description || 'Bike Mesa Action Group' %>">
  <meta name="twitter:image" content="<%= pageConfig.ogImage ? 'https://bikemesa.org' + pageConfig.ogImage : 'https://bikemesa.org/img/full_logo.png' %>">
  
  <link rel="stylesheet" type="text/css" href="/css/style.css">
  <link rel="shortcut icon" type="image/jpg" href="/img/full_logo.png"/>
</head>

<body class="min-h-screen flex flex-col">
  <header class="bg-white/95 backdrop-blur-sm border-b border-gray-100">
    <nav class="max-w-6xl mx-auto px-6 py-6" x-data="{ isOpen: false }" @keydown.escape="isOpen = false" @click.away="isOpen = false">
      
      <!-- Desktop Navigation - Visible on large screens only -->
      <ul class="hidden lg:flex items-center justify-center space-x-16 text-xl w-full">
        <li><a href="/" class="text-gray-700 hover:text-blue-600 font-semibold transition-all duration-200 px-6 py-3 rounded-lg hover:bg-blue-50">Home</a></li>
        <li><a href="/about" class="text-gray-700 hover:text-blue-600 font-semibold transition-all duration-200 px-6 py-3 rounded-lg hover:bg-blue-50">About</a></li>
        <li><a href="/blog" class="text-gray-700 hover:text-blue-600 font-semibold transition-all duration-200 px-6 py-3 rounded-lg hover:bg-blue-50">Blog</a></li>
      </ul>

      <!-- Mobile Navigation Toggle - Only on small screens -->
      <div class="lg:hidden flex items-center justify-between w-full">
        <span class="text-xl font-semibold text-gray-800">Bike Mesa</span>
        <button
          @click="isOpen = !isOpen" type="button"
          class="p-2 rounded-lg text-gray-600 hover:text-blue-600 hover:bg-gray-50 transition-colors"
          aria-label="Toggle menu">
          <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path x-show="!isOpen" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            <path x-show="isOpen" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      
      <div class="lg:hidden mt-6" x-show="isOpen" x-transition:enter="transition ease-out duration-200" x-transition:enter-start="opacity-0 scale-95" x-transition:enter-end="opacity-100 scale-100">
        <nav class="bg-gray-50/80 backdrop-blur rounded-xl p-6 shadow-lg">
          <ul class="space-y-4">
            <li><a @click="isOpen = false" class="block text-gray-700 hover:text-blue-600 font-medium text-lg py-3 px-4 rounded-lg hover:bg-white transition-all" href="/">Home</a></li>
            <li><a @click="isOpen = false" class="block text-gray-700 hover:text-blue-600 font-medium text-lg py-3 px-4 rounded-lg hover:bg-white transition-all" href="/about">About</a></li>
            <li><a @click="isOpen = false" class="block text-gray-700 hover:text-blue-600 font-medium text-lg py-3 px-4 rounded-lg hover:bg-white transition-all" href="/blog">Blog</a></li>
          </ul>
        </nav>
      </div>
    </nav>
  </header>

  <main class="flex-1">
